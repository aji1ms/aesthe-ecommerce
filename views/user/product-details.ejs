<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f5f5f5;
        }

        .container {
            max-width: 1500px;
            margin: 0 auto;
        }

        /* Product Detail Section */
        .product-detail {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            margin-bottom: 30px;
            background-color: #fff;
            padding: 20px;
            border-radius: 4px;
        }

        /* Product Images Section */
        .product-images {
            flex: 1;
            min-width: 300px;
        }

        .images-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr 1fr;
            gap: 10px;
            border: 1px solid #e1e1e1;
            padding: 10px;
            border-radius: 4px;
        }

        .images-grid img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 2px;
        }

        /* Product Info Section */
        .product-info {
            flex: 1;
            min-width: 300px;
        }

        .product-title {
            font-size: 24px;
            margin-bottom: 10px;
            font-weight: 500;
        }

        .product-price {
            font-size: 18px;
            color: #d73333;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .product-colors {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .color-option {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
            border: 1px solid #ddd;
        }

        .color-option.active {
            border: 2px solid #d73333;
        }

        .sizes {
            margin-bottom: 20px;
        }

        .size-title {
            margin-bottom: 10px;
            font-weight: 500;
        }

        .size-options {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 20px;
        }

        .size-option {
            padding: 8px 16px;
            border: 1px solid #ddd;
            cursor: pointer;
            background-color: #f9f9f9;
            border-radius: 4px;
            text-align: center;
            min-width: 50px;
        }

        .size-option.active {
            border-color: #000;
            background-color: #000;
            color: #fff;
        }

        .add-button {
            background-color: #000;
            color: #fff;
            border: none;
            padding: 15px;
            width: 100%;
            font-size: 16px;
            cursor: pointer;
            margin-bottom: 20px;
            border-radius: 4px;
        }

        .delivery-info {
            margin-bottom: 15px;
            font-size: 14px;
        }

        .ratings {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .stars {
            display: flex;
            margin-right: 10px;
        }

        .star {
            color: gold;
            margin-right: 2px;
        }

        .reviews-count {
            color: #666;
            font-size: 14px;
        }

        .accordion {
            margin-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

        .accordion-header {
            font-weight: 500;
            padding: 15px 0;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
        }

        .accordion-content {
            padding-bottom: 15px;
            display: none;
        }

        .accordion-content.active {
            display: block;
        }

        /* Related Products Section */
        .related-section {
            margin-top: 40px;
        }

        .section-title {
            font-size: 20px;
            margin-bottom: 20px;
            font-weight: 500;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
        }

        .product-card {
            position: relative;
            background-color: #fff;
            border-radius: 4px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .product-card:hover {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .product-card img {
            width: 100%;
            aspect-ratio: 4/4;
            object-fit: cover;
        }

        .product-card-info {
            padding: 15px;
        }

        .product-card-title {
            font-size: 14px;
            margin-bottom: 5px;
            font-weight: 500;
        }

        .product-card-price {
            font-size: 14px;
            color: #666;
        }

        .wishlist-icon {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #fff;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }

        .pagination-item {
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #ddd;
            margin: 0 5px;
            cursor: pointer;
            border-radius: 50%;
        }

        .pagination-item.active {
            background-color: #000;
            color: #fff;
            border-color: #000;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .product-detail {
                flex-direction: column;
            }
            
            .product-images, .product-info {
                width: 100%;
            }
        }

        @media (max-width: 480px) {
            .images-grid {
                display: flex;
                flex-direction: column;
            }
            
            .size-options {
                flex-wrap: wrap;
            }
            
            .size-option {
                flex: 1;
                min-width: 60px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Product Detail Section -->
        <div class="product-detail">
            <!-- Product Images Section -->
            <div class="product-images">
                <div class="images-grid">
                    <img src="/uploads/re-image/<%=product.productImage[0]%>" alt="Product image">
                    <img src="/uploads/re-image/<%=product.productImage[1]%>" alt="Product image">
                    <img src="/uploads/re-image/<%=product.productImage[2]%>" alt="Product image">
                    <img src="/uploads/re-image/<%=product.productImage[3]%>" alt="Product image">
                </div>
            </div>

            <!-- Product Info Section -->
            <div class="product-info">
                <h1 class="product-title"><%=product.productName%></h1>
                <p class="product-price">Rs.<%=product.salePrice%><span style="text-decoration: line-through; color: #888; font-size: 14px; margin-left: 5px;"><%=product.regularPrice%></span></p>
                
                <div class="product-colors">
                    <div class="color-option active" style="background-color: #8B4513;"></div>
                    <div class="color-option" style="background-color: #000;"></div>
                    <div class="color-option" style="background-color: #fff;"></div>
                    <div class="color-option" style="background-color: #f5f5dc;"></div>
                    <div class="color-option" style="background-color: #000080;"></div>
                </div>
                
                <div class="sizes">
                    <div class="size-title">Sizes</div>
                    <div class="size-options">
                        <div class="size-option">XS</div>
                        <div class="size-option active">S</div>
                        <div class="size-option">M</div>
                        <div class="size-option">L</div>
                        <div class="size-option">XL</div>
                        <div class="size-option">XXL</div>
                    </div>
                </div>
                
                <button class="add-button">Add</button>
                
                <div class="delivery-info">
                    <p>Delivery Time: 2-7 days</p>
                </div>
                
                <div class="ratings">
                    <div class="stars">
                        <span class="star">★</span>
                        <span class="star">★</span>
                        <span class="star">★</span>
                        <span class="star">★</span>
                        <span class="star" style="color: #ddd;">★</span>
                    </div>
                    <span class="reviews-count">(28,478 Reviews)</span>
                </div>
                
                <div class="accordion">
                    <div class="accordion-header">
                        <span>Description & Fit</span>
                        <span>+</span>
                    </div>
                    <div class="accordion-content">
                        <p><%=product.description%></p>
                    </div>
                </div>
                
                <div class="accordion">
                    <div class="accordion-header">
                        <span>Materials</span>
                        <span>+</span>
                    </div>
                    <div class="accordion-content">
                        <p>80% Cotton, 20% Polyester. Machine washable.</p>
                    </div>
                </div>
                
                <div class="accordion">
                    <div class="accordion-header">
                        <span>Care guide</span>
                        <span>+</span>
                    </div>
                    <div class="accordion-content">
                        <p>Machine wash cold with like colors. Do not bleach. Tumble dry low.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Style With Section -->

<!-- Style With Section -->
<div class="related-section">
    <h2 class="section-title">Style With</h2>
    <div class="products-grid">
        <% relatedProducts.forEach(product => { %>
            <div class="product-card">
                <div class="wishlist-icon">♡</div>
                <a href="/productDetails?id=<%= product._id %>">
                    <% if(product.productImage && product.productImage.length > 0) { %>
                        <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                    <% } else { %>
                        <img src="/path/to/default-image.jpg" alt="Default product image">
                    <% } %>
                </a>
                <div class="product-card-info">
                    <h3 class="product-card-title"><%= product.productName %></h3>
                    <p class="product-card-price">Rs.<%= product.salePrice %></p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<!-- Others Also Bought Section -->
<div class="related-section">
    <h2 class="section-title">Others also bought</h2>
    <div class="products-grid">
        <% othersAlsoBought.forEach(product => { %>
            <div class="product-card">
                <div class="wishlist-icon">♡</div>
                <a href="/productDetails?id=<%= product._id %>">
                    <% if(product.productImage && product.productImage.length > 0) { %>
                        <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                    <% } else { %>
                        <img src="/path/to/default-image.jpg" alt="Default product image">
                    <% } %>
                </a>
                <div class="product-card-info">
                    <h3 class="product-card-title"><%= product.productName %></h3>
                    <p class="product-card-price">Rs.<%= product.salePrice %></p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
        <!-- Pagination -->
        <div class="pagination">
            <div class="pagination-item">«</div>
            <div class="pagination-item active">1</div>
            <div class="pagination-item">2</div>
            <div class="pagination-item">3</div>
            <div class="pagination-item">4</div>
            <div class="pagination-item">»</div>
        </div>
    </div>

    <script>
        // Simple accordion functionality
        document.querySelectorAll('.accordion-header').forEach(header => {
            header.addEventListener('click', () => {
                const content = header.nextElementSibling;
                content.classList.toggle('active');
                
                // Change the plus/minus sign
                const symbol = header.querySelector('span:last-child');
                symbol.textContent = content.classList.contains('active') ? '-' : '+';
            });
        });

        // Size selection functionality
        document.querySelectorAll('.size-option').forEach(option => {
            option.addEventListener('click', () => {
                document.querySelectorAll('.size-option').forEach(opt => {
                    opt.classList.remove('active');
                });
                option.classList.add('active');
            });
        });

        // Color selection functionality
        document.querySelectorAll('.color-option').forEach(option => {
            option.addEventListener('click', () => {
                document.querySelectorAll('.color-option').forEach(opt => {
                    opt.classList.remove('active');
                });
                option.classList.add('active');
            });
        });
    </script>
</body>
</html>
<%-include("../../views/partials/user/footer")%>