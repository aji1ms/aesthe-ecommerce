      gap: 15px;
    }

    .wallet-input-group {
      width: 100%;
    }

    .wallet-input {
      width: 100%;
      padding: 12px 15px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
      transition: border-color 0.2s;
    }

    .wallet-input:focus {
      border-color: #ff9800;
      outline: none;
    }

    .wallet-button {
      background-color: #ff9800;
      color: white;
