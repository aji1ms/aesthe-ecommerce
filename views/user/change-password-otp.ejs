<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AESTHE - OTP Verification</title>
    <link rel="stylesheet" href="verify-otp.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<body>
    <div class="split-layout">
        <div class="left-side">
            <div class="logo">Aesth√©</div>
            <div class="verification-content">
                <h1 class="emailverification">OTP Verification</h1>
                <form id="otpForm" action="/verify-changePassword-otp" method="post" onsubmit="return validateOTPForm()">
                    <div class="form-group">
                        <label>Enter OTP:</label>
                        <input type="text" id="otp" name="otp" maxlength="6" required>
                    </div>
                    <div class="timer">59</div>
                    <button type="submit" class="btn">Verify OTP</button>
                    <button type="button" class="btn" style="margin-top: 1rem" onclick="resendOTP()">Resend OTP</button>
                </form>
            </div>
        </div>
        <div class="right-side"></div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        
        let timeLeft = 59;
      const timerDisplay = document.querySelector(".timer");
      const resendButton = document.querySelector('.btn[type="button"]');

      const timer = setInterval(() => {
        if (timeLeft <= 0) {
          clearInterval(timer);
          resendButton.style.opacity = "1";
          resendButton.disabled = false;
        } else {
          timerDisplay.textContent = timeLeft;
          timeLeft--;
        }
      }, 1000);

      resendButton.style.opacity = "0.5";
      resendButton.disabled = true;

      function resendOTP() {
        clearInterval(timer);
        timeLeft = 59;
        timerDisplay.textContent = timeLeft;

        resendButton.style.opacity = "0.5";
        resendButton.disabled = true;

        const newTimer = setInterval(() => {
          if (timeLeft <= 0) {
            clearInterval(newTimer);
            resendButton.style.opacity = "1";
            resendButton.disabled = false;
          } else {
            timerDisplay.textContent = timeLeft;
            timeLeft--;
          }
        }, 1000);

        return false;
      }

      document.addEventListener("DOMContentLoaded", () => {
        const otpForm = document.getElementById("otpForm");
        otpForm.addEventListener("submit", (e) => {
          e.preventDefault();

          Swal.fire({
            icon: "success",
            toast: true,
            position: "top-end",
            title: "OTP verified successfully",
            showConfirmButton: false,
            timer: 2000,
            customClass: {
              popup: "custom-toast",
            },
          }).then(() => {
            otpForm.submit();
          });
        });
      });

    </script>
</body>

</html>