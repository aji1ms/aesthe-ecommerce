                    </div>

                    <% if (!userAddress) { %>
                        <div id="no-address-container" class="no-address-message">
                            You can add and edit delivery addresses here
                        </div>
                        <% } else { %>
                            <div id="address-list-container" class="address-list">
                                <% userAddress.address.forEach((address)=> { %>
                                    <div class="address-card" data-address-id="<%= address._id %>">
                                        <div class="address-details">
                                            <strong class="address-type-tag">
                                                <%= address.addressType%>
                                            </strong>
                                            <br><br>
                                            <p style="font-size: 14px; color: #666; letter-spacing: .5px;">
                                                <%= address.name %>
                                            </p>
                                            <p style="font-size: 14px; color: #666; letter-spacing: .5px;">
                                                <%= address.landMark%>
                                                    <%= address.pincode %><br>
