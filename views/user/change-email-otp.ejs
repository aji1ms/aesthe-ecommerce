<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AESTHE - OTP Verification</title>
  <link rel="stylesheet" href="verify-otp.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<body>
  <div class="split-layout">
    <div class="left-side">
      <div class="logo">Aesth√©</div>
      <div class="verification-content">
        <h1 class="emailverification">Email Verification</h1>
        <form id="otpForm" action="/verify-email-otp" method="post">
          <div class="form-group">
            <label>Enter OTP:</label>
            <input type="text" id="otp" name="otp" maxlength="6" required />
          </div>
          <div class="timer">59</div>
          <button type="submit" class="btn">Verify Email</button>
          <button type="button" class="btn" style="margin-top: 1rem" onclick="resendOTP()">
            Resend OTP
          </button>
        </form>
      </div>
    </div>
    <div class="right-side"></div>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>

    let timeLeft = 59;
    const timerDisplay = document.querySelector(".timer");
    const resendButton = document.querySelector('.btn[type="button"]');

    const timer = setInterval(() => {
      if (timeLeft <= 0) {
        clearInterval(timer);
        resendButton.style.opacity = "1";
        resendButton.disabled = false;
      } else {
        timerDisplay.textContent = timeLeft;
        timeLeft--;
      }
    }, 1000);

    resendButton.style.opacity = "0.5";
    resendButton.disabled = true;

    function resendOTP() {
      clearInterval(timer);
      timeLeft = 59;
      timerDisplay.textContent = timeLeft;

      resendButton.style.opacity = "0.5";
      resendButton.disabled = true;

      const newTimer = setInterval(() => {
        if (timeLeft <= 0) {
          clearInterval(newTimer);
          resendButton.style.opacity = "1";
          resendButton.disabled = false;
        } else {
          timerDisplay.textContent = timeLeft;
          timeLeft--;
        }
      }, 1000);

      return false;
    }

    document.addEventListener("DOMContentLoaded", () => {
      const otpForm = document.getElementById("otpForm");

      otpForm.addEventListener("submit", (e) => {
        e.preventDefault();
        const otpValue = document.getElementById("otp").value;

        fetch("/verify-email-otp", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ otp: otpValue })
        })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              Swal.fire({
                icon: "success",
                toast: true,
                position: "top-end",
                title: data.message || "OTP verified successfully",
                showConfirmButton: false,
                timer: 2000,
              }).then(() => {
                // Redirect if verification is successful
                window.location.href = data.redirect || "/new-email";
              });
            } else {
              // If OTP does not match, show error alert
              Swal.fire({
                icon: "error",
                toast: true,
                position: "top-end",
                title: data.message || "OTP not matching",
                showConfirmButton: false,
                timer: 2000,
              });
            }
          })
          .catch(error => {
            console.error("Error:", error);
            Swal.fire({
              icon: "error",
              toast: true,
              position: "top-end",
              title: "An error occurred",
              showConfirmButton: false,
              timer: 2000,
            });
          });
      });
    });
  </script>
</body>

</html>