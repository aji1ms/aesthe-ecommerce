          </nav>
        </div>
        <nav class="first-nav">
          <ul id="MenuItems">
            <%if (locals.user) {%>
              <li class="dropdown">
                <a href="#" class="user-name">
                  <%=locals.user.name%>
                </a>
                <div class="dropdown-content">
                  <a href="/profile"><i class="fas fa-user"></i> My Profile</a>
