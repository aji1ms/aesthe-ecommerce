<%- include("../../views/partials/admin/header") %>
    <style>
        body {
            background-color: #ffffff;
        }

        .navbar {
            background-color: #8da7ab;
        }

        .navbar-aside {
            background-color: #b0d5de;
        }

        .menu-item a.menu-link {
            color: #310505;
        }

        .menu-item a.menu-link:hover,
        .menu-item a.menu-link.active {
            background-color: #6e7e6e;
            color: #ffffff;
        }

        .dropdown-menu {
            background-color: #bb9aaf;
        }

        .dropdown-item:hover {
            background-color: #33053d;
            color: #ffffff;
        }

        /* Sales Report Specific Styles */
        .sales-report-container {
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin: 20px;
        }

        .report-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid #dee2e6;
        }

        .report-title {
            color: #4c4c4c;
            font-size: 24px;
            font-weight: 600;
        }

        .filter-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
        }

        .filter-title {
            font-size: 18px;
            font-weight: 600;
            color: #4c4c4c;
            margin-bottom: 15px;
        }

        .filter-row {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 15px;
        }

        .filter-btn {
            padding: 8px 15px;
            border-radius: 5px;
            background-color: #b0d5de;
            color: #310505;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 500;
        }

        .filter-btn:hover,
        .filter-btn.active {
            background-color: #8da7ab;
            color: #ffffff;
        }

        .generate-btn {
            padding: 10px 20px;
            background-color: #6e7e6e;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
        }

        .generate-btn:hover {
            background-color: #5a6a5a;
            transform: translateY(-2px);
        }

        .date-input {
            padding: 8px 12px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            width: 150px;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            text-align: center;
            transition: transform 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-icon {
            font-size: 30px;
            margin-bottom: 10px;
            color: #8da7ab;
        }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: #4c4c4c;
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 14px;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .chart-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        @media (max-width: 992px) {
            .chart-container {
                grid-template-columns: 1fr;
            }
        }

        .chart-card {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

        .chart-title {
            font-size: 18px;
            font-weight: 600;
            color: #4c4c4c;
            margin-bottom: 15px;
            text-align: center;
        }

        .report-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

        .report-table th {
            background-color: #b0d5de;
            color: #310505;
            padding: 12px 15px;
            text-align: left;
            font-weight: 600;
        }

        .report-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #dee2e6;
        }

        .report-table tr:last-child td {
            border-bottom: none;
        }

        .report-table tr:hover {
            background-color: #f8f9fa;
        }

        .export-btn {
            padding: 8px 15px;
            background-color: #bb9aaf;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s;
            margin-left: 10px;
        }

        .export-btn:hover {
            background-color: #a58999;
        }

        .action-row {
            display: flex;
            justify-content: flex-end;
            margin-top: 20px;
        }

        /* Custom date range container */
        .custom-date-container {
            display: none;
            margin-top: 15px;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 5px;
            border: 1px solid #dee2e6;
        }

        .custom-date-container.active {
            display: block;
        }

        .date-range-inputs {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .date-label {
            font-weight: 500;
            color: #4c4c4c;
        }
    </style>
    <section class="content-main">
        <div class="sales-report-container">
            <div class="report-header">
                <h2 class="report-title">Sales Report</h2>
                <div class="action-row">
                    <button class="export-btn" onclick="exportToPDF()">
                        <i class="fas fa-file-pdf"></i> Export PDF
                    </button>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-container">
                <h3 class="filter-title">Filter Options</h3>
                <div class="filter-row">
                    <button class="filter-btn" data-period="daily" onclick="applyFilter('daily')">Daily</button>
                    <button class="filter-btn" data-period="weekly" onclick="applyFilter('weekly')">Weekly</button>
                    <button class="filter-btn" data-period="monthly" onclick="applyFilter('monthly')">Monthly</button>
                    <button class="filter-btn" data-period="yearly" onclick="applyFilter('yearly')">Yearly</button>
                    <button class="filter-btn" data-period="custom" onclick="toggleCustomDate()">Custom
                        DateRange</button>
                </div>

                <!-- Custom Date Range -->
                <div class="custom-date-container" id="customDateContainer" style="display: none;">
                    <div class="date-range-inputs">
                        <div>
                            <span class="date-label">From:</span>
                            <input type="date" id="startDate" class="date-input">
                        </div>
                        <div>
                            <span class="date-label">To:</span>
                            <input type="date" id="endDate" class="date-input">
                        </div>
                        <button class="filter-btn" onclick="applyFilter('custom', true)">Apply</button>
                    </div>
                </div>
            </div>

            <!-- Stats Overview -->
            <div class="stats-container">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="stat-value" id="totalSales">
                        <%=totalSalesCount%>
                    </div>
                    <div class="stat-label">Total Sales</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="stat-value" id="totalRevenue">$<%=totalRevenue%>
                    </div>
                    <div class="stat-label">Total Revenue</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-tags"></i>
                    </div>
                    <div class="stat-value" id="totalDiscount">$<%=totalDiscount%>
                    </div>
                    <div class="stat-label">Total Discounts</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                    <div class="stat-value" id="couponUsage">
                        <%=totalCouponUsage%>
                    </div>
                    <div class="stat-label">Coupon Usage</div>
                </div>
            </div>

            <!-- Detailed Report Table -->
            <div class="table-responsive">
                <h3 class="filter-title">Detailed Sales Report</h3>
                <table class="report-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Products</th>
                            <th>Discount</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody id="reportTableBody">

                        <%if (orders&&orders.length>0){ %>
                            <%orders.forEach(function(order){%>
                                <tr>
                                    <td>
                                        <%= new Date(order.createdOn).toLocaleString()%>
                                    </td>
                                    <td>
                                        <%=order._id%>
                                    </td>
                                    <td>
                                        <%=order.user ? order.user.name : 'N/A' %>
                                    </td>
                                    <td>
                                        <% if (order.orderedItem && order.orderedItem.length) { %>
                                            <% order.orderedItem.forEach(function(item, index) { %>
                                                <%= item.product ? item.product.productName : 'Unknown' %>
                                                <%= index < order.orderedItem.length - 1 ? ', ' : '' %>
                                            <% }); %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                    <td>$<%= order.discount ? order.discount.toFixed(2) : '0.00' %>
                                    </td>
                                    <td>$<%= order.finalAmount ? order.finalAmount.toFixed(2) : '0.00' %>
                                    </td>
                                </tr>
                                <%})%>
                                    <%}else{%>
                                        <td colspan="7" class="text-center">No orders found</td>
                                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <script>


        function getFilterQuery() {
            const urlParams = new URLSearchParams(window.location.search);
            return '?' + urlParams.toString();
        }

        function exportToPDF() {
            window.location.href = '/admin/sales/pdf' + getFilterQuery();
        }

        function exportToExcel() {
            window.location.href = '/admin/sales/excel' + getFilterQuery();
        }


        function setPeriod(period) {
            document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelector(`.filter-btn[data-period="${period}"]`).classList.add('active');

            if (period === 'custom') {
                document.getElementById('customDateContainer').classList.add('active');
            } else {
                document.getElementById('customDateContainer').classList.remove('active');
            }
        }


        function generateReport() {
            const activeBtn = document.querySelector('.filter-btn.active');
            const period = activeBtn.getAttribute('data-period');
            let queryParams = `?period=${period}`;

            if (period === 'custom') {
                const startDate = document.getElementById('startDate').value;
                const endDate = document.getElementById('endDate').value;
                if (!startDate || !endDate) {
                    alert('Please provide both start and end dates for custom range.');
                    return;
                }
                queryParams += `&startDate=${encodeURIComponent(startDate)}&endDate=${encodeURIComponent(endDate)}`;
            }

            window.location.href = '/admin/sales' + queryParams;
        }

        function toggleCustomDate() {
            const container = document.getElementById("customDateContainer");
            container.style.display = (container.style.display === "none" || container.style.display === "") ? "block" : "none";
        }

        function applyFilter(period, isCustom = false) {
            let queryParams = `?period=${period}`;
            if (isCustom) {
                const startDate = document.getElementById("startDate").value;
                const endDate = document.getElementById("endDate").value;
                if (!startDate || !endDate) {
                    alert("Please select both start and end dates.");
                    return;
                }
                queryParams += `&startDate=${encodeURIComponent(startDate)}&endDate=${encodeURIComponent(endDate)}`;
            }
            window.location.href = '/admin/sales' + queryParams;
        }

    </script>
    <%- include("../../views/partials/admin/footer") %>