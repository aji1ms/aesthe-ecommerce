<%- include("../../views/partials/admin/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    body {
      background-color: #f8fafc;
    }

    .card-title {
      font-size: 0.9rem;
      color: #6b7280; /* gray-500 */
      margin-bottom: 0.5rem;
    }
    .card-value {
      font-size: 1.25rem;
      font-weight: 600;
      color: #111827; /* gray-900 */
    }
    .card-subtext {
      font-size: 0.8rem;
      color: #6b7280;
    }

    /* Chart Container Styles */
    .chart-container {
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
      padding: 1rem;
    }
    .chart-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
    }
    .chart-title {
      font-size: 1rem;
      font-weight: 600;
      color: #111827;
    }

    /* Table Styles */
    .table thead th {
      background-color: #f3f4f6;
      border-bottom: 2px solid #e5e7eb;
    }
    .table tbody tr:hover {
      background-color: #f9fafb;
    }
  </style>
</head>
<body>
  <div class="container-fluid p-4">

    <div class="row g-3 mb-4">
      <div class="col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <div class="card-title">Total Orders</div>
            <div class="card-value"><%= totalOrders %></div>
            <div class="card-subtext text-success">
              <i class="fa fa-arrow-up"></i> +5% from last month
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <div class="card-title">Total Sales</div>
            <div class="card-value">$<%= totalRevenue.toFixed(2) %></div>
            <div class="card-subtext text-success">
              <i class="fa fa-arrow-up"></i> +8% from last month
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <div class="card-title">Total Customers</div>
            <div class="card-value"><%= totalCustomers %></div>
            <div class="card-subtext text-success">
              <i class="fa fa-arrow-up"></i> +3% from last month
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <div class="card-title">Product Categories</div>
            <div class="card-value"><%= totalCategories %></div>
            <div class="card-subtext text-info">
              <i class="fa fa-plus"></i><a href="/admin/category">Add new category</a> 
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-lg-8">
        <div class="chart-container">
          <div class="chart-header">
            <h5 class="chart-title mb-0">Sales Overview</h5>
            <div>
              <button
                class="btn btn-outline-secondary <%= filterType === 'monthly' ? 'active' : '' %>"
                data-period="monthly"
              >
                Monthly
              </button>
              <button
                class="btn btn-outline-secondary <%= filterType === 'yearly' ? 'active' : '' %>"
                data-period="yearly"
              >
                Yearly
              </button>
            </div>
          </div>
          <canvas id="salesChart"></canvas>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="chart-container">
          <div class="chart-header">
            <h5 class="chart-title mb-0">Top Categories</h5>
          </div>
          <canvas id="topCategoriesChart" height="300"></canvas>
        </div>
      </div>
    </div>

    <div class="row g-3 mt-4">
      <div class="col-12">
        <div class="chart-container">
          <div class="chart-header">
            <h5 class="chart-title mb-0">Best Selling Products</h5>
          </div>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead>
                <tr>
                  <th>Product Name</th>
                  <th>Category</th>
                  <th>Price</th>
                  <th>Sold</th>
                  <th>Revenue</th>
                </tr>
              </thead>
              <tbody>
                <% topProducts.forEach(product => { %>
                  <tr>
                    <td><%= product.productName %></td>
                    <td><%= product.categoryName || 'N/A' %></td>
                    <td>$<%= (product.price || 0).toFixed(2) %></td>
                    <td><%= product.totalQuantity %></td>
                    <td>$<%= product.revenue.toFixed(2) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>


  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"
    integrity="sha512-R3Scgi6c44w6NgTJn3WeBYZJLDv9lpbC3pa9X+VQCqZK4F47ts9ar1aZ94rjo7E6oeE+ZzZr76BfoqGbCU7Pzw=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  ></script>

  <script>

    const chartData = <%- JSON.stringify(chartData) %>; 
    const filterType = "<%= filterType %>";   
    const year = "<%= year %>";
    const month = "<%= month || '' %>";
  
    const labels = chartData.map((item) => item._id);
    const totalSales = chartData.map((item) => item.totalSales);
  
    const ctxSales = document.getElementById('salesChart').getContext('2d');
    new Chart(ctxSales, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
        datasets: [
          {
            label: 'Total Sales',
            data: totalSales,
            backgroundColor: 'rgba(75, 192, 192, 0.1)',
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 2,
            fill: true,
            tension: 0.2 
          }
        ]
      },
      options: {
        responsive: true,
        scales: { y: { beginAtZero: true } }
      }
    });
  

    const topCategories = <%- JSON.stringify(topCategories) %>; 
    const categoryLabels = topCategories.map((cat) => cat.categoryName);
    const categoryValues = topCategories.map((cat) => cat.totalQuantity);
  
    const ctxCategories = document.getElementById('topCategoriesChart').getContext('2d');
    new Chart(ctxCategories, {
      type: 'bar',
      data: {
        labels: categoryLabels,
        datasets: [
          {
            label: 'Items Sold',
            data: categoryValues,
            backgroundColor: 'rgba(54, 162, 235, 0.8)'
          }
        ]
      },
      options: {
        indexAxis: 'y',  
        responsive: true,
        scales: {
          x: { beginAtZero: true }
        }
      }
    });

    document.querySelectorAll('.chart-container .btn').forEach((btn) => {
      btn.addEventListener('click', () => {
        const period = btn.getAttribute('data-period');
        let url = `/admin/?filter=${period}&year=${year}`;
        if (period === 'monthly') {
          url += `&month=${month}`;
        }
        window.location.href = url;
      });
    });
  </script>
  

</body>
</html>
<%- include("../../views/partials/admin/footer") %>